<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$([MSBuild]::GetPathOfFileAbove('Project.Code.props', '$(MSBuildThisFileDirectory)'))" />

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>

    <AssemblyName>AppMotor.Core</AssemblyName>
    <!-- See: https://docs.microsoft.com/en-us/nuget/create-packages/prerelease-packages -->
    <Version>0.2.0</Version>

    <Description>Contains core APIs of the AppMotor framework.</Description>
    <Authors>Sebastian Krysmanski</Authors>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Collections.Immutable" Version="1.7.1" />
  </ItemGroup>

</Project>
